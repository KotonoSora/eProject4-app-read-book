<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:paddingBottom="@dimen/dp4"
        android:paddingLeft="@dimen/dp8"
        android:paddingRight="@dimen/dp8"
        android:paddingTop="@dimen/dp4">

        <RelativeLayout
            android:layout_width="2dp"
            android:layout_height="30dp"
            android:background="#048498">

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/re_xemthem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp10"
            android:gravity="center">

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="false"
                android:fontFamily="sans-serif-condensed"
                android:text="Tên Thể Loại Sách"
                android:textColor="#1a1b1b"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:fontFamily="sans-serif-condensed"
                android:text="Xem thêm ..."
                android:textColor="#adadad"
                android:textSize="12sp" />
        </RelativeLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/dp8"
        android:paddingLeft="@dimen/dp8"
        android:paddingRight="@dimen/dp8">

        <LinearLayout
            android:id="@+id/re_item1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp4"
            android:layout_weight="1"
            android:orientation="vertical">

            <!--<ImageView-->
            <!--android:id="@+id/imageView9"-->
            <!--android:layout_width="140dp"-->
            <!--android:layout_height="100dp"-->
            <!--android:layout_weight="1"-->
            <!--android:scaleType="fitXY"-->
            <!--app:srcCompat="@drawable/antest" />-->

            <com.github.siyamed.shapeimageview.mask.PorterShapeImageView
                android:id="@+id/imageView9"
                android:layout_width="wrap_content"
                android:layout_height="180dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                android:src="@drawable/antest"
                app:siShape="@drawable/shape_rounded_rectangle"
                app:siSquare="true" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:padding="@dimen/dp12"
                android:text="Tẩu tiến tu tiên"
                android:textColor="#000000"
                android:textSize="10sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/re_item2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp4"
            android:layout_weight="1"
            android:orientation="vertical">

            <!--<ImageView-->
                <!--android:id="@+id/imageView110"-->
                <!--android:layout_width="140dp"-->
                <!--android:layout_height="100dp"-->
                <!--android:scaleType="fitXY"-->
                <!--app:srcCompat="@drawable/antest" />-->

            <com.github.siyamed.shapeimageview.mask.PorterShapeImageView
                android:id="@+id/imageView110"
                android:layout_width="wrap_content"
                android:layout_height="180dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                android:src="@drawable/antest"
                app:siShape="@drawable/shape_rounded_rectangle"
                app:siSquare="true" />

            <TextView
                android:id="@+id/textView100"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_horizontal"
                android:padding="@dimen/dp12"
                android:text="Tẩu tiến tu tiên"
                android:textColor="#000000"
                android:textSize="10sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/re_item3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp4"
            android:layout_weight="1"
            android:orientation="vertical">

            <!--<ImageView-->
                <!--android:id="@+id/imageView11"-->
                <!--android:layout_width="140dp"-->
                <!--android:layout_height="100dp"-->
                <!--android:scaleType="fitXY"-->
                <!--app:srcCompat="@drawable/antest" />-->

            <com.github.siyamed.shapeimageview.mask.PorterShapeImageView
                android:id="@+id/imageView11"
                android:layout_width="wrap_content"
                android:layout_height="180dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                android:src="@drawable/antest"
                app:siShape="@drawable/shape_rounded_rectangle"
                app:siSquare="true" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_horizontal"
                android:padding="@dimen/dp12"
                android:text="Tẩu tiến tu tiên"
                android:textColor="#000000"
                android:textSize="10sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/re_item4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp4"
            android:layout_weight="1"
            android:background="@drawable/tao_bong_mo"
            android:orientation="vertical"
            android:visibility="gone">

            <ImageView
                android:id="@+id/imageView13"
                android:layout_width="140dp"
                android:layout_height="100dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/antest" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_horizontal"
                android:padding="@dimen/dp12"
                android:text="Tẩu tiến tu tiên"
                android:textColor="#000000"
                android:textSize="10sp" />

        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_weight="1"
        android:background="#f3f3f3">

    </RelativeLayout>

</LinearLayout>